<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Delete Post" />

    <TextView
        android:id="@+id/tvDialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDialogTitle"
        android:layout_alignStart="@id/tvDialogTitle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/secondary_text"
        tools:text="Are you sure you want to delete this post?" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDialogMessage"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/btnConfirmDelete"
        android:background="@drawable/btn_register"
        android:backgroundTint="@color/secondary_text"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnConfirmDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnCancel"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/toast"
        android:text="Delete"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>